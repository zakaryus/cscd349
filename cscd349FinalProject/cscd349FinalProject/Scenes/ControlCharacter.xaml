        <CheckBox x:Name="cbKnightFemale" Content="Knight Female" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top" Unchecked="cb_Unchecked" Checked="cb_Checked" FontFamily="/cscd349FinalProject;component/Fonts/#Triforce" FontSize="24" Width="190" HorizontalContentAlignment="Center"/>
