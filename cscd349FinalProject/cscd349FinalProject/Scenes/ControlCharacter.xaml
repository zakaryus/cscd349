        <CheckBox x:Name="cbSoldierMale" Content="Soldier Male" HorizontalAlignment="Left" Margin="600,132,0,0" VerticalAlignment="Top" Unchecked="cb_Unchecked" Checked="cb_Checked" FontFamily="/cscd349FinalProject;component/Fonts/#Triforce" FontSize="24" Width="190" HorizontalContentAlignment="Center"/>
