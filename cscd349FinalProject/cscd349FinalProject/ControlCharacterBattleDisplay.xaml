<UserControl x:Class="cscd349FinalProject.ControlCharacterBattleDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="300" MouseDown="UserControl_MouseDown">
    <Grid x:Name="grdBattleDisplay">
        <Image x:Name="imgFace" HorizontalAlignment="Left" Height="48" Margin="10,10,0,0" VerticalAlignment="Top" Width="48"/>
        <Label x:Name="lblName" Content="Label" HorizontalAlignment="Left" Margin="63,32,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="pbHitPoints" HorizontalAlignment="Left" Height="16" Margin="10,63,0,0" VerticalAlignment="Top" Width="280" Foreground="Lime"/>
        <Label x:Name="lblHitPointFraction" Content="xx/xxx" Margin="0,84,10,0" VerticalAlignment="Top" Width="64" HorizontalAlignment="Right"/>
        <Label x:Name="lblDamageTaken"  Content="Label" HorizontalAlignment="Left" Margin="252,10,0,0" VerticalAlignment="Top" Foreground="Red"/>

    </Grid>
</UserControl>
