             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="280">
    <Grid>
        <Label x:Name="lblName" Content="&lt;ItemName&gt;" HorizontalAlignment="Left" Margin="58,10,0,0" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="tblkDescription" Margin="10,67,10,10" TextWrapping="Wrap" Text="&lt;ItemDescription&gt;"/>
        <Image x:Name="ItemIcon" HorizontalAlignment="Left" Height="48" Margin="10,10,0,0" VerticalAlignment="Top" Width="48"/>
        
    </Grid>
